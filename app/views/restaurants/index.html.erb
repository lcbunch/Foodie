<h1>Listing restaurants</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Noms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to('View Noms', restaurant_noms_path(restaurant.id)) %></td>
        <td><%= link_to 'Show', restaurant_nom_path(@restaurant.id, nom.id) %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(@restaurant.id, nom.id) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

